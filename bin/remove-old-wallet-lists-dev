#!/usr/bin/env bash

set -e

SCRIPT_DIR="$(dirname "$0")"
cd "$SCRIPT_DIR/.."

./rebar3 compile

export ERL_EPMD_ADDRESS=127.0.0.1

erl -pa `./rebar3 path` \
    -noshell \
    -config config/sys.config \
    -name cleanup-process@127.0.0.1 \
    -setcookie arweave \
    -run ar_cleanup remove_old_wallet_lists
